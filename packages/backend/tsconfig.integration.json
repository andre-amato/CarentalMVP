{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["mocha", "chai", "node", "supertest"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/tests/integration/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "node_modules/@types/jest"]
}
