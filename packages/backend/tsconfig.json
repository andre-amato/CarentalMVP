  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "types": ["node", "jest"],
    "allowJs": true,
    "skipLibCheck": true
