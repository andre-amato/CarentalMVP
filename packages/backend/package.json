{
  "name": "@carental/backend",
  "version": "1.0.0",
  "description": "Carental backend service",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc && node scripts/add-js-extensions.js",
    "test:unit": "jest --coverage",
    "test:integration": "NODE_ENV=test TS_NODE_PROJECT=tsconfig.integration.json mocha --require ts-node/register 'src/tests/integration/**/*.test.ts' --exit --timeout 10000",
    "test:all": "npm run test:unit && npm run test:integration"
  },
  "dependencies": {
    "@carental/shared": "1.0.0",
    "express": "^4.18.2",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/chai": "^5.2.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "chai": "^5.2.0",
    "jest": "^29.7.0",
    "mocha": "^11.1.0",
    "mongodb-memory-server": "^9.1.1",
    "supertest": "^7.1.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "type": "module"
}
